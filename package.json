{
  "name": "batch-drop",
  "version": "1.0.0",
  "description": "Import multiple images and create a component set with variants",
  "scripts": {
    "build": "npm run build:code && npm run build:ui",
    "build:ui": "node scripts/bundle-ui.js",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2017",
    "watch": "concurrently \"npm run watch:code\" \"npm run watch:ui\"",
    "watch:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2017 --watch",
    "watch:ui": "node -e \"require('fs').watchFile('src/ui.html', () => require('child_process').execSync('node scripts/bundle-ui.js'))\""
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "esbuild": "^0.20.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
